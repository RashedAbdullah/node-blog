<div class="container mx-auto py-10">
  <h1 class="text-4xl font-bold mb-8 text-center text-gray-800">
    Create a New Blog
  </h1>
  <form
    action="/blogs"
    method="POST"
    enctype="multipart/form-data"
    class="max-w-xl mx-auto bg-white p-10 shadow-lg rounded-lg border border-gray-200"
  >
    <div class="mb-6">
      <label for="title" class="block mb-2 text-lg font-medium text-gray-700"
        >Blog Title</label
      >
      <input
        type="text"
        id="title"
        name="title"
        class="w-full p-4 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-600 transition duration-300"
        placeholder="Enter your blog title"
        required
      />
    </div>

    <div class="mb-6">
      <label for="cover" class="block mb-2 text-lg font-medium text-gray-700"
        >Cover Image</label
      >
      <input
        type="file"
        id="cover"
        name="cover"
        class="w-full px-3 py-2 text-gray-700 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-600 transition duration-300"
        accept="image/*"
      />
      <p class="mt-1 text-sm text-gray-500">
        Upload a cover image for your blog
      </p>
    </div>

    <div class="mb-6">
      <label for="body" class="block mb-2 text-lg font-medium text-gray-700"
        >Blog Body</label
      >
      <textarea
        id="body"
        name="body"
        rows="8"
        class="w-full p-4 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-600 transition duration-300"
        placeholder="Write the content of your blog"
        required
      ></textarea>
    </div>

    <div class="mb-6">
      <button
        type="submit"
        class="w-full bg-blue-600 text-white py-3 rounded-lg hover:bg-blue-700 transition duration-300 font-semibold"
      >
        Submit Blog
      </button>
    </div>
  </form>
</div>
